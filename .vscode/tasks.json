{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            // 任务名
            "label": "make",
            // 命令行调用
            "command": "make",
            "options": {
                // 在 build/ 目录中执行
                "cwd": "${workspaceFolder}/build"
            },
            // 依赖哪个任务的执行结果
            "dependsOn": "cmake"
        },
        {
            "type": "shell",
            // 任务名
            "label": "cmake",
            // 命令行调用
            "command": "cmake",
            // 命令行参数
            "args": [
                "../"
            ],
            "options": {
                // 在 build/ 目录中执行
                "cwd": "${workspaceFolder}/build"
            },
        },
    ]
}